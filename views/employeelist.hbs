                <td>{{this.fullName}}</td>
                <td></td>
                <td>{{this.email}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.city}}</td>
                <td>{{this.empid}}</td>
                <td style="text-align: center;">
                    {{!-- <a href="/employee/{{employee._id}}">
                        <button type="button" class="btn btn-danger">Delete</button>
                    </a> --}}
                    <a href="/employee/delete/{{this._id}}"
                        onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash"
                            style="color: grey;" aria-hidden="true"></i></a>
                    <a href="/employeedit/{{this._id}}">
                        <i class="fas fa-edit" style="color:grey;"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>