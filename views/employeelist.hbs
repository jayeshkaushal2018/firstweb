                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">City</th>
                <th scope="col">Empid</th>
                <th scope="col" style="text-align: center;">Action</th>

            </tr>
        </thead>
        <tbody>
            {{#each list}}
